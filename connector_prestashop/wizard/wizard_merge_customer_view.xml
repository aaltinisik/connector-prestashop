<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
		
        <record id="view_wizard_merge_customer_form" model="ir.ui.view">
            <field name="name">prestashop.wizard.merge_customer.form</field>
            <field name="model">prestashop.wizard.merge_customer</field>
            <field name="arch" type="xml">
            	<form>
            	
            		<group>
            			<field name="source_partner_id"/>
            			<field name="target_partner_id"/>
            			<field name="update_target"/>
            		</group>
            		<footer>
                        <button name="action_merge" string="Merge" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
            	
            	</form>
            	
            	
                
            </field>
        </record>
        

    </data>
</openerp>
